<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.calebwin.snakesanddots"
    versionCode = "1"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

    <name>Snakes &#038; Dots</name>

    <description>
        A game about 2 snakes and lots of dots.
    </description>

    <author href="https://build.phonegap.com" email="calebhwin@gmail.com">
        Caleb Winston
    </author>
   
    <preference name="orientation" value="landscape" />
    
    <icon src="www/res/mdpi.png" platform="android" qualifier="ldpi" />
    <icon src="www/res/mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="www/res/hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="www/res/xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="www/res/xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="www/res/fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" /> 
    
    <!-- iPhone 6 / 6+ -->
    <icon src="icon-60@3x.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icon-60.png" platform="ios" width="60" height="60" />
    <icon src="icon-60.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icon-76.png" platform="ios" width="76" height="76" />
    <icon src="icon-76@2x.png" platform="ios" width="152" height="152" />
    <icon src="icon-76@2x.png" platform="ios" width="167" height="167" />

    <!-- Settings Icon -->
    <icon src="icon-small.png" platform="ios" width="29" height="29" />
    <icon src="icon-small.png" platform="ios" width="58" height="58" />
    <icon src="icon-small@3x.png" platform="ios" width="87" height="87" />

    <!-- Spotlight Icon -->
    <icon src="icon-40.png" platform="ios" width="40" height="40" />
    <icon src="icon-40.png" platform="ios" width="80" height="80" />
    <icon src="icon-40@3x.png" platform="ios" width="120" height="120" />

</widget>
